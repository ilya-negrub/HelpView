<UserControl x:Class="HelpView.View.ViewOne"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HelpView.View"
             xmlns:controls="clr-namespace:HelpView.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Cyan">

        <StackPanel Margin="50">
            <Button x:Name="btn1" Content="Button 1" controls:HelpViewPanel.Attached="main"/>
            <Button x:Name="btn2" Content="Button 2" controls:HelpViewPanel.Attached="main"/>
            <Button x:Name="btn3" Content="Button 3" controls:HelpViewPanel.Attached="main"/>
            <Image x:Name="img1" Source="https://wallpapercart.com/wp-content/uploads/2019/08/Full-HD-1080p-Images-HD-Nature.jpg"
                   controls:HelpViewPanel.Attached="main"/>
        </StackPanel>
    </Grid>
</UserControl>
